<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
     <form-beans>
         <form-bean name="exampleForm" type="com.granule.struts_example.ExampleForm"/>
     </form-beans>
     <action-mappings>
         <action name="exampleForm" path="/ExampleAction" type="com.granule.struts_example.ExampleAction">
             <forward name="ex1" path="/pages/page1.jsp"/>
             <forward name="ex2" path="/pages/page2.jsp" />
             <forward name="ex3" path="/pages/very/deep/folder/page3.jsp"/>
         </action>
     </action-mappings>
</struts-config>